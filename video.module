/*
 * Utility function to remove all files and directories recursively.
 */
function rmdirr($dir) {
  if($objs = glob($dir."/*")){
    foreach($objs as $obj) {
      is_dir($obj)? rmdirr($obj) : unlink($obj);
    }
  }
  @rmdir($dir);
}